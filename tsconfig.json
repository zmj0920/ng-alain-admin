{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@store/*": [
        "src/app/store/*"
      ],
      "@routes/*": [
        "src/app/routes/*"
      ],
      "@pages/*": [
        "src/app/pages/*"
      ],
      "@component/*": [
        "src/app/component/*"
      ],
      "@service/*": [
        "src/app/service/*"
      ],
      "@pipe/*": [
        "src/app/utils/pipe/*"
      ],
      "@directive/*": [
        "src/app/utils/directive/*"
      ],
      "@/*": ["./src/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
