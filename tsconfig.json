{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@shared": [
        "src/app/shared/index"
      ],
      "@core": [
        "src/app/core/index"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@env/*": [
        "src/environments/*"
      ],
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@pipe/*": [
        "src/app/core/pipe/*"
      ],
      "@directive/*": [
        "src/app/core/directive/*"
      ],
    }
  }
}
